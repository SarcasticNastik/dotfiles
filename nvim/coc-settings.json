{
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": [
                "start"
            ],
            "filetypes": [
                "sh"
            ]
        }
    },
    "coc.preferences.formatOnSaveFiletypes": [
        "dart",
        "rust",
        "c",
        "cpp",
        "dart",
        "python",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "go"
    ],
    "tsserver.formatOnType": true,
    "snippets.ultisnips.directories": [
        "UltiSnips",
        "~/.local/share/nvim/Ultisnips"
    ],
    "python.venvPath": "~/.local/share/virtualenvs/",
    "python.jediPath": "~/.local/share/virtualenvs/jedi/lib/python3.8/site-packages/",
    "python.jediEnabled": true,
    "suggest.timeout": 5000,
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "~/.local/share/virtualenvs/black/bin/black",
    /* "python.linting.pylintPath": "~/.local/share/virtualenvs/pylint/bin/pylint", */
    /* "python.linting.enabled": false, */
    "python.linting.pylintEnabled": false,
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "~/.local/share/virtualenvs/flake8/bin/flake8",
    "python.linting.lintOnSave": true,
    "diagnostic.displayByAle": true
}
